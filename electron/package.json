{
  "name": "introspect",
  "version": "1.0.0",
  "description": "Offline AI journal with pattern recognition",
  "main": "main.js",
  "author": "Your Team Name",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win --x64",
    "build:linux": "electron-builder --linux"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.introspect.journal",
    "productName": "Introspect",
    "directories": {
      "output": "dist-installer"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,readme.md}",
      "!**/*.map",
      "!python-runtime"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": ["**/*", "!**/__pycache__", "!**/*.pyc", "!*.db"]
      },
      {
        "from": "python-runtime",
        "to": "python",
        "filter": [
          "**/*",
          "!**/__pycache__",
          "!**/*.pyc",
          "!**/test",
          "!**/tests"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": ["dmg"],
      "files": [
        "**/*"
      ]
    },
    "win": {
      "target": ["nsis"]
    }
  }
}
